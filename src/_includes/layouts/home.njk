        <div class="col-md col-lg-10">
            <h1 class="pt-5 pb-4">Legfrissebb</h1>
            <div class="row row-cols-sm-1 row-cols-md-3 row-cols-lg-4">
            {% for hir in collections["hirek_" + locale] %}
                <div class="col">
                <div class="card h-100">
                <div class="card-body">
                    <h4 class="card-title">{{hir.data.title}}</h4>
                    {# TODO dátum sok helyen fog kelleni, legyen belőle shortcode #}
                    <h6 class="card-subtitle mb-2 text-muted"><time datetime="{{ hir.data.date | date('YYYY-MM-DD')}}">{{ hir.data.date | date('YYYY.MM.DD', locale) }}</time></h6> 
                    <div class="card-text">{{ hir.data.content | safe | truncate }}</div> {# TODO text-truncate nem működik #}
                    <a href="{{hir.url}}" class="link-tatk stretched-link">Tovább...</a>
                </div>
            </div>
            </div>
            {% endfor %}
            <div class="col align-self-center text-center">
                <a href="/hu/hirek" class="link-tatk">
                <i class="bi bi-arrow-right-circle fs-1"></i>
                <p>Tovább a többi hírre</p></a>
            </div>
            </div>
        </div>
    </div>
</div>