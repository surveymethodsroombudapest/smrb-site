---
layout: base.njk
---
<div class="container-fluid">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-6">
            <h1 class="">{{title}}</h1>
            <div class="pt-3 me-4">
                {{ content | safe }}
            </div>

        </div>
        <div class="col-lg-4">
            {# TODO ugyanezt angolul is#}
            <h1 class="pb-3">Kutat√≥ink</h1>
            {% for item in collections.kutatok_hu %}
                <div class="card border-1 mb-3 p-2">
                    <div class="row align-items-center">
                        <div class="col-3 ">
                            <img src="{{item.data.img}}" alt="{{item.data.name}}" class="img-fluid rounded-circle float-end h-sm-50">
                        </div>
                        <div class="col-9">
                            <div class="card-body">
                                 <a href="{{item.url}}" class="stretched-link"><h4 class="card-title">{{item.data.name}}</h4></a>
                                <p class="card-subtitle">{{item.data.pos}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        
    </div>
</div>