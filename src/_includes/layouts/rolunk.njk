---
layout: base.njk
---
<div class="container-xxl">
    <div class="row justify-content-center align-items-center pt-5 g-3 ">
        <div class="col-md-5 col-lg-6">
            <h3 id="kutatok-title">{{translations.kut[locale]}}</h3>
            {% for item in collections["kutatok_" + locale] %}
                <div class="card card-researcher border-0 mb-3">
                    <div class="card-researcher-content p-3">

                        <div class="row align-items-center">
                            <div class="col-3 d-flex justify-content-end">
                                <img src="{{item.data.img}}" alt="{{item.data.name}}" class="img-fluid rounded-circle">
                            </div>
                            <div class="col-9">
                                <div class="card-body">
                                    <a href="{{item.url}}" class="stretched-link kutato-link">
                                        <h4 class="card-title">{{item.data.name}}</h4>
                                    </a>
                                    <p class="card-subtitle">{{item.data.pos}}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>

        <div class="col-md-7 col-lg-4 align-items-center d-flex text-muted">
            <div class="">
                {{ content | safe }}
            </div>
        </div>

    </div>
</div>