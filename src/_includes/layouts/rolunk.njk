<div class="container-fluid">
    <div class="row justify-content-center mt-5 gx-5">
        <div class="col-md-6">
            <h1 class="">{{title}}</h1>
            <div class="pt-3 me-4">
                {{ content | safe }}
            </div>

        </div>
        <div class="col-md-4">
            {# TODO ugyanezt angolul is#}
