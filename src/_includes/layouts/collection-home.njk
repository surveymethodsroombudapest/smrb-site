---
layout: base.njk
---

<div class="container-xxl">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xxl-7 d-flex flex-column gap-4 mb-5">
      <h1 class="section-title">{{ title }}</h1>

      {%- for hir in collections[colname + "_" + locale] -%}

        <div class="card card-hover p-2 card-collection-item">
          <div class="card-body">
            <h4 class="card-title fw-bold mb-3">{{hir.data.title | safe}}</h4>
            <h6 class="card-subtitle text-muted">{{ hir.data.date | date('YYYY. MM. DD.')}}</h6>
            <div class="card-text mt-3 mb-4">{{hir.data.content | safe | truncate }}</div>
            <a href="{{hir.url}}" class="stretched-link button-readmore">{{ 'readmore' | i18n }}</a>
          </div>
        </div>

      {%- endfor -%}
    </div>
  </div>
</div>