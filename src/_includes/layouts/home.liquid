---
layout: base.njk
---
<div class="container-fluid">
  <div class="row justify-content-center align-items-center bg-light" id="mission-row">
    <div class="col-md-4">
      <img src="/static/img/logo.png" class="img-fluid float-end">
    </div>
    <div class="col-md-6">

      <p id="mission">{{ content }}</p>

      <a href="/hu/kutatok/" class="link-tatk">Kutatócsoportunkról bővebben
        <i class="bi bi-arrow-right-short"></i>
      </a>
      {% # TODO legyen locale-függő link %}
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md col-lg-10">
      <h3 class="pt-5 pb-4">Legfrissebb</h3>
      <div class="row row-cols-sm-1 row-cols-md-3 row-cols-lg-4">
        {% # TODO ez most csak magyarul működik%}
        {% for hir in collections.hirek_hu limit:3 %}
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">{{hir.data.title}}</h5>
                {% # TODO dátum sok helyen fog kelleni, legyen belőle shortcode %}
                <h6 class="card-subtitle mb-2 text-muted">
                  {{ hir.data.date | date: 'YYYY. MM. DD.', locale }}
                </h6>
                <div class="card-text">{{ hir.data.content | truncate }}</div>
                <a href="{{hir.url}}" class="link-tatk stretched-link">Tovább...</a>
              </div>
            </div>
          </div>
        {% endfor %}
        <div class="col align-self-center text-center">
          <a href="/hu/hirek" class="link-tatk">
            <i class="bi bi-arrow-right-circle fs-1"></i>
            <p>Tovább a többi hírre</p>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>