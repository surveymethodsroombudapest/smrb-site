---
layout: base.njk
---

{% set gobackTitle = parentId | localisedLinkLabel(locale) %}
{% set gobackUrl = parentId | localisedLink(locale) %}

<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-md-10 col-lg-8 col-xxl-6 shadow p-3 p-md-5 mt-3 mt-md-5">
			<div class="article-header">
				<div class="d-flex flex-row justify-content-between align-items-baseline">
					{% goback gobackUrl,
					gobackTitle %}
					{% if date %}
						<h6 class="subtitle">{{ date | date('YYYY. MM. DD.')}}</h6>
					{% endif %}
				</div>

				<h1>{{ title }}</h1>
				{% if subtitle %}
					<h6 class="subtitle">{{subtitle}}</h6>
				{% endif %}
			</div>
			<div class="me-3">
				{{content | safe}}
			</div>
		</div>
	</div>
</div>